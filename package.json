{
  "name": "blockchain-voting",
  "version": "0.0.1",
  "description": "Server side of blockchain-voting-system",
  "author": "Yurii Kryvokhyzha",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "npm run start:prod",
    "start:dev": "set NODE_ENV=development&& nodemon",
    "start:debug": "set NODE_ENV=development&& nodemon --config nodemon-debug.json",
    "prestart:prod": "rm -rf ./dist && tsc",
    "start:prod": "npm run prestart:prod && node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "start:voting-check": "ts-node -r tsconfig-paths/register src/voting-check-job.ts"
  },
  "dependencies": {
    "@nestjs/common": "^5.6.2",
    "@nestjs/core": "^5.6.2",
    "@nestjs/jwt": "^0.2.1",
    "@nestjs/mongoose": "^5.2.2",
    "@nestjs/passport": "^5.1.0",
    "@types/dotenv": "^6.1.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/mongoose": "^5.3.8",
    "@types/node-rsa": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "bull": "^3.7.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "dotenv": "^6.2.0",
    "hbs": "^4.0.1",
    "js-sha256": "^0.9.0",
    "jwt-decode": "^2.2.0",
    "mongoose": "^5.4.5",
    "nest-bull": "^0.3.1",
    "node-rsa": "^1.0.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.2.2",
    "typescript": "^3.2.4"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.6.2",
    "@types/bull": "^3.5.8",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "jest": "^23.5.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.11.0",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
